<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/menugoart" />

        <Button
            android:id="@+id/CreateMenuBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="sendUserToCreateMenu"
            android:text="Create a Weekly Menu"
            app:backgroundTint="@color/black"
            app:strokeColor="@color/white" />

        <Button
            android:id="@+id/ListMealsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/black"
            android:layout_marginTop="10dp"
            android:text="Your List Of Meals"
            app:strokeColor="@color/white" />

        <Button
            android:id="@+id/GenerateGroceryListBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:backgroundTint="@color/black"
            android:text="Generate a Grocery List"
            app:strokeColor="@color/white" />

        <Button
            android:id="@+id/RandomMenuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/black"
            android:layout_marginTop="10dp"
            android:text="Generate a Random Menu"
            app:strokeColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>